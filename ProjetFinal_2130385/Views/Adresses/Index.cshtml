@model ProjetFinal_2130385.ViewModels.AdressesVM

@{
    ViewData["Title"] = "Liste des adresses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Liste des adresses</h1>

<form asp-controller="Adresses" asp-action="Index" method="get">
    <div class="form-group">
        <label for="villeFilter">Filtrer par ville :</label>
        <select id="villeFilter" name="villeFilter" class="form-control">
            @foreach (var item in ViewBag.Villes)
            {
                <!option value="@item" @(item == ViewBag.VilleSelectionnee ? "selected" : "")>@item</!option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="provinceFilter">Filtrer par province :</label>
        <select id="provinceFilter" name="provinceFilter" class="form-control">
            @foreach (var item in ViewBag.Provinces)
            {
                <!option value="@item" @(item == ViewBag.ProvinceSelectionnee ? "selected" : "")>@item</!option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Filtrer</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Numéro de porte</th>
            <th>Numéro d'appartement</th>
            <th>Rue</th>
            <th>Ville</th>
            <th>Code Postal</th>
            <th>Province</th>
            <th>Pays</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var adresse in Model.Adresses)
        {
            <tr>
                <td>@adresse.NoPorte</td>
                <td>@adresse.NoApp</td>
                <td>@adresse.Rue</td>
                <td>@adresse.Ville</td>
                <td>@adresse.CodePostal</td>
                <td>@adresse.Province</td>
                <td>@adresse.Pays</td>
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <div class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <a href="@Url.Action("Index", new { page = Model.CurrentPage - 1 })" class="page-link">Précédent</a>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <a href="@Url.Action("Index", new { page = i })" class="page-link @(Model.CurrentPage == i ? "current-page" : "")">@i</a>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <a href="@Url.Action("Index", new { page = Model.CurrentPage + 1 })" class="page-link">Suivant</a>
        }
    </div>
}
